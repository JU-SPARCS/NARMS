!!!
%html
  %head
    %title Page Title
    = stylesheet_link_tag '/app/stylesheets/login'
  %body
    %a{:href => "#"}
      %h1.page-title
        NARMS
    .container
      .login
        %h1 Login
        = form_tag '/login', :method => 'post' do
          %p
            %input{:name => "email", :placeholder => "Email", :type => "email", :value => params[:email]}/
          %p
            %input{:name => "password", :placeholder => "Password", :type => "password", :value => ""}/
          %p.submit
            %input{:name => "commit", :type => "submit", :value => "Login"}/
          %p.form-error 
            - if flash.now[:error]
              = flash.now[:error][:email]
